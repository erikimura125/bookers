<% if flash[:notice] %>
  <div class = "flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>

  <h5>Title</h5>
  <%= f.text_field :title %>
  
  <h5>Body</h5>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book',class:'button' %>
  
  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", '/books' ,class:'back-button' %>
  
<% end %>