<% if flash[:notice] %>
  <div class = "flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class ="show_content">
  <div class = "title">
    <h3>Title:</h3>
    <p><%= @book.title %></p>
  </div>
  
  <div class ="body">
    <h3>Body:</h3>
    <p><%= @book.body %></p>
  </div>
</div>

<%= link_to "Edit", edit_book_path(@book.id) %>
<%= link_to "Back", '/books' %>